extends ../layout

block content
  .container.center-div
    .row.form-user
      .col-sm
        h2 Choose a new password
        form.px-4.py-3.needs-validation#form-recover-confirm-password(method='POST', enctype='multipart/form-data', novalidate='')
          input(type='hidden' name='email' value=email)
          .form-group.password
              label(for='password') Password
              input#password.form-control(type='password' placeholder='*******' name='password' required='', pattern='^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])([ \\W\\w\\d]+)$', minlength=8)
          .form-group.confirm_password
            label(for='confirm_password') Confirm Password
            input#confirm_password.form-control(type='password' placeholder='*******' name='confirm_password' required='', pattern='^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])([ \\W\\w\\d]+)$', minlength=8)
          button.btn.btn-primary.btn-bottom#recover-password-update-confirm Confirm
        .dropdown-divider

