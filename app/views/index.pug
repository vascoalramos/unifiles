extends layout

block content
  .container
    <hr/>
    .row.m-0.mb-4
      .col-12(style="background:#ffffff;border-radius:5px;padding:5px;background-color: white;border-radius:10px;box-shadow:0px 8px 8px -11px black;")
        .row.m-0
          .col-12.py-2.px-3(style="display:flex;align-items:flex-start")
            img.mr-3(style="border-radius:50%; " src="https://scontent-lis1-1.xx.fbcdn.net/v/t1.0-1/cp0/p40x40/95778730_3241824932516006_124736591989047296_n.jpg?_nc_cat=102&ccb=2&_nc_sid=7206a8&_nc_ohc=4iTOXrpvoxYAX-A_66_&_nc_ht=scontent-lis1-1.xx&tp=27&oh=d67b255c12fd7462a5398560dbd461cc&oe=602DF92C")
            input.form-control(type='text' data-toggle='modal' data-target='#exampleModal' style="flex-grow:1;border-radius:20px;height:auto;padding:8px 12px;font-size: 1.0625rem;line-height: 1.34;background: #f0f2f5;" placeholder=`Queres inserir conteudo, ${user.first_name}?`)
            // Modal
            #exampleModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
              .modal-dialog(role='document')
                .modal-content
                  .modal-header.py-2.px-0.mx-3
                    h5#exampleModalLabel.modal-title.col-12.px-0.text-center(style="font-size: 1.25rem;font-weight: bold;color: black;") Create Content
                    button.close(type='button' data-dismiss='modal' aria-label='Close' style="outline:none!important;position:absolute;top:6px;right:16px;background: #e4e6eb;margin: 0px;border-radius: 50%;padding: 6px 12px;font-size: 24px;")
                      span(aria-hidden='true') &times;
                  form.px-4.py-3#form-upload(method='POST', enctype='multipart/form-data')
                    .form-group
                      .row
                        .col-12(style="display:flex;align-items: center;")
                          img.mr-3(style="border-radius:50%; " src="https://scontent-lis1-1.xx.fbcdn.net/v/t1.0-1/cp0/p40x40/95778730_3241824932516006_124736591989047296_n.jpg?_nc_cat=102&ccb=2&_nc_sid=7206a8&_nc_ohc=4iTOXrpvoxYAX-A_66_&_nc_ht=scontent-lis1-1.xx&tp=27&oh=d67b255c12fd7462a5398560dbd461cc&oe=602DF92C")
                          div(style="display:flex;flex-direction:column;flex-grow: 1;overflow: hidden;")
                            p.mb-0(style="font-size:12px;") #{user.first_name} #{user.last_name} 
                            div(style="display:flex;border-bottom:1px solid black")
                              div.d-flex(style="display: flex;width: 100%;flex-wrap: wrap;")
                                input#tags(type="text" style="border: 0;outline: none!important;flex-grow:1;font-size:12px" placeholder="Tags")
                      .row.mt-3
                        .col-4.pr-1
                          input.form-control(type="text" name="subject" style="outline: none!important;font-size: 12px;height: auto;box-shadow: none !important;" placeholder="Title")
                        .col-4.pl-1
                          input.form-control(type="text" name="year" style="outline: none!important;font-size: 12px;height: auto;box-shadow: none !important;" placeholder="Year")
                        .col-4.pl-1
                          .input-group
                            select#inputGroupSelect01.custom-select(style="font-size:12px" name="type")
                              option(selected='') Type
                              option(value='Artigos') Articles
                              option(value='Teses') Theses
                              option(value='Livros') Books
                              option(value='Relatorios') Reports
                              option(value='Aplicacoes') Aplications   
                        .col-12
                          textarea.form-control(type='text' name="description" rows="6" cols="50" style="font-size: 14px;height: auto;outline:none!important;box-shadow: none;border:none;resize:none;border-radius:20px;padding:8px 12px;" placeholder=`Do you want insert content, ${user.first_name}?`)
                        .col-12(style="font-size:12px")
                          .row(style="margin:0;border:1px solid #e4e6eb;")
                            .col-5.my-auto.mx-0(style="margin: auto;")
                              span
                                |Add Image
                            .col-5.mx-0.px-0(style="margin: auto;display: flex;align-items: center;position: relative;flex-wrap: inherit;")
                              label.mb-0.mr-2
                                span.imgSpan(style="font-size:12px")
                                  i.fas.fa-image(style="height: 100%;font-size: 39px;line-height: 40px;")
                                input.imgInput.d-none(type='file' name='image' accept="image/x-png,image/jpeg")
                        .col-12(style="font-size:12px")
                          .row(style="margin:0;border:1px solid #e4e6eb;")
                            .col-5.mr-0.pr-0(style="margin: auto;")
                              |Add files
                            .col-5.mr-0.p-0.form-uploads(style="margin: auto;display: flex;align-items: center;position: relative;flex-wrap: inherit;")
                              label.mb-0.mr-2
                                span.iSpan(style="font-size:12px")
                                  i.fas.fa-folder-plus(style="height: 100%;font-size: 39px;line-height: 40px;")
                                input.fileInput.d-none.form-control-file(type='file' name='files' accept="application/x-zip-compressed")
                            .col-2.mr-0.pl-0(style="margin: auto;")
                              button.btn.fas.fa-plus.btn-secondary#add-upload-form(type="button" style="background:#343a40" hidden) 
                            

                      .modal-footer(style="border:0")
                        button.col-12.btn.btn-primary#upload-confirm(type='button' style="background:#343a40;border:0;box-shadow: none!important") Create
                      
          .col-12


    .col-12.py-3(style="background-color: white;border-radius:5px;box-shadow:0px 8px 8px -11px black;")
      h1= title 
      p Welcome to #{user.first_name} #{user.last_name}
      form.px-4.py-3.needs-validation(action="/auth/logout", method='GET')
        button.btn.btn-primary(type='submit') Logout
